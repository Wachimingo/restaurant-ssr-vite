{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": [
    // "client/**/*.tsx",
    // "client/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "client/**/*.spec.ts",
    "client/**/*.module.css",
    "client/**/*.css",
    "server/**/*.css",
    "client/pages/_common/**.tsx",
    "client/pages/_common/**.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}